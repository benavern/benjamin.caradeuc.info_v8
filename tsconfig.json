{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "target": "es2021",
        "module": "es2015",
        "moduleResolution": "bundler",
        "lib": ["es2021", "dom"],
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false
    }
}
