---
import Layout from "../../../components/Layout.astro";
import { getCollection } from "astro:content";

// 1️⃣ Générer toutes les pages pour les tags existants
export async function getStaticPaths() {
  const posts = await getCollection("blog");

  // Extraire tous les tags uniques
  const tags = new Set(posts.flatMap(post => post.data.tags || []));

  return Array.from(tags).map(tag => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;

// 2️⃣ Filtrer les articles correspondant au tag
const posts = (await getCollection("blog")).filter(post => post.data.tags?.includes(tag));
---

<Layout title={`Articles avec le tag #${tag}`}>
  <h1>Articles avec le tag #{tag}</h1>

  {posts.length === 0 ? (
    <p>Aucun article pour ce tag.</p>
  ) : (
    <ul>
      {posts.map(post => (
        <li>
          <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
          <span> - {post.data.date.toLocaleDateString("fr-FR")}</span>
        </li>
      ))}
    </ul>
  )}

  <a href="/blog/tags">Voir tous les tags</a>
</Layout>
