            class="btn btn--variant-secondary-border">
            <div class="btn__icon">
                <Icon name="mdi:menu" />
            </div>
        </button>

        <ul id="main-menu-nav">
            <li>
                <a
                    class="btn"
                    href="/">
                    Accueil
                </a>
            </li>

            <li>
                <a
                    class="btn"
                    href="/blog/">
                    Blog
                </a>
            </li>

            <li>
                <a
                    class="btn"
                    href="/parcours/">
                    Parcours
                </a>
            </li>

            <li>
                <a
                    class="btn"
                    href="/contact/">
                    Contact
                </a>
            </li>
        </ul>

        <theme-switcher>
            <label class="theme-switcher">
                <span class="sr-only">Dark</span>

